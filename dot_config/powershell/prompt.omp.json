{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        // {
        //   "type": "session",
        //   "style": "plain",
        //   "foreground": "#45F1C2",
        //   "properties": {
        //     "prefix": "\uf508 ",
        //     "postfix": " on",
        //     "template": "{{ .UserName }}"
        //   }
        // },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#0CA0D8",
          "properties": {
            "style": "full",
            // "prefix": " \uf07b ",
            "folder_separator_icon": "\\"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#14A5AE",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "fetch_status": true,
            "prefix": "",
            // "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }}"
            "template": "{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uF046 {{ .Staging.String }} {{ .Staging.Added }} {{ .Staging.Modified }} </>{{ end }}"
            // "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uF046 {{ .Staging.String }}</>{{ end }}"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#cd5e42",
          "properties": {
            "prefix": "root",
            "root_icon": "\ue3bf"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#CD4277",
          "properties": {
            "prefix": "",
            "text": "\u0023"
          }
        }
      ]
    }
  ]
}
